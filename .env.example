# WeCom Feedback System Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Storage Configuration
# =============================================================================
# Storage backend: "uc" (Unity Catalog) or "local" (JSON)
STORAGE_BACKEND=uc

# Unity Catalog settings (when STORAGE_BACKEND=uc)
UC_CATALOG=dev
UC_SCHEMA=inner_feedback

# Local storage path (when STORAGE_BACKEND=local)
LOCAL_STORAGE_PATH=./data

# =============================================================================
# Databricks Connect Configuration
# =============================================================================
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com/
DATABRICKS_TOKEN=your_databricks_access_token_here

# Table name (optional, default: user_feedback)
TABLE_NAME=user_feedback

# =============================================================================
# Webhook Configuration
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
